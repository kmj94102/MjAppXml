<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="custom"
            type="com.example.mjappxml.custom.CustomBottomNavigation" />

        <import type="android.view.View" />

    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/beige"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <com.example.mjappxml.custom.CustomBottomNavigationItem
                android:id="@+id/itemHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:onClick="@{custom::goToHome}"
                app:isCurrentItem="true"
                app:navigationIcon="@drawable/ic_home"
                app:navigationTitle="홈" />

            <com.example.mjappxml.custom.CustomBottomNavigationItem
                android:id="@+id/itemGame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:onClick="@{custom::goToGame}"
                app:isCurrentItem="false"
                app:navigationIcon="@drawable/ic_game_pad"
                app:navigationTitle="게임" />

            <com.example.mjappxml.custom.CustomBottomNavigationItem
                android:id="@+id/itemSchedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:onClick="@{custom::goToSchedule}"
                app:isCurrentItem="false"
                app:navigationIcon="@drawable/ic_calendar"
                app:navigationTitle="달력" />

            <com.example.mjappxml.custom.CustomBottomNavigationItem
                android:id="@+id/itemAccountBook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:onClick="@{custom::goToAccountBook}"
                app:isCurrentItem="false"
                app:navigationIcon="@drawable/ic_flower"
                app:navigationTitle="가계부" />

            <com.example.mjappxml.custom.CustomBottomNavigationItem
                android:id="@+id/itemOther"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:onClick="@{custom::goToOther}"
                app:isCurrentItem="false"
                app:navigationIcon="@drawable/ic_other"
                app:navigationTitle="기타" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>