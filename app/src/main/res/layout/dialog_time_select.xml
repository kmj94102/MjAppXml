<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="dialog"
            type="com.example.mjappxml.ui.dialog.TimeSelectDialog" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="16dp"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@{dialog.title}"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="타이틀" />

            <NumberPicker
                android:id="@+id/hourPicker"
                android:layout_width="90dp"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:theme="@style/NumberPickerStyle"
                app:layout_constraintEnd_toStartOf="@id/minutePicker"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"
                app:pickerValues="@{dialog.hourArray}" />

            <NumberPicker
                android:id="@+id/minutePicker"
                android:layout_width="90dp"
                android:layout_height="180dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:theme="@style/NumberPickerStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/hourPicker"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"
                app:pickerValues="@{dialog.minuteArray}" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                android:onClick="@{() -> dialog.dismiss()}"
                app:cardBackgroundColor="@color/light_black"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardOk"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/minutePicker"
                app:strokeWidth="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="13dp"
                    android:text="@string/cancel"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:onClick="@{() -> dialog.onSelect()}"
                app:cardBackgroundColor="@color/dark_blue"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="@id/cardCancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardCancel"
                app:layout_constraintTop_toTopOf="@id/cardCancel"
                app:strokeWidth="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="13dp"
                    android:text="@string/ok"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>