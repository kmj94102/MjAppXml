<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="com.example.communication.model.MyCalendar" />

        <import type="android.view.View" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="2dp"
        app:cardBackgroundColor="@color/light_black"
        app:cardCornerRadius="44dp"
        app:strokeColor="@color/dark_blue"
        app:strokeWidth="0dp"
        tools:layout_height="35dp"
        tools:layout_width="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.date}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:dateTextColor="@{item}"
                tools:text="1" />

            <LinearLayout
                android:id="@+id/layoutDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:visibility="@{item.itemList.size() > 1 ? View.VISIBLE: View.GONE, default = gone}"
                    app:cardBackgroundColor="@color/dark_blue"
                    app:cardCornerRadius="5dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="3dp"
                    android:visibility="@{item.itemList.size() > 2 ? View.VISIBLE: View.GONE, default = gone}"
                    app:cardBackgroundColor="@color/dark_blue"
                    app:cardCornerRadius="5dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="3dp"
                    android:visibility="@{item.itemList.size() > 3 ? View.VISIBLE: View.GONE, default = gone}"
                    app:cardBackgroundColor="@color/dark_blue"
                    app:cardCornerRadius="5dp"
                    app:strokeWidth="0dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>